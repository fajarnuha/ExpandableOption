<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:theme="@style/style_expandable_option_default">

    <RelativeLayout
        android:id="@+id/content_header_option"
        style="?attr/eo_header_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:style="@style/eo_header_style">

        <include
            layout="@layout/include_text_title_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/check_button" />

        <CheckBox
            android:id="@+id/check_button"
            style="?attr/eo_checked_style"
            tools:style="@style/eo_checked_style" />
    </RelativeLayout>

    <include layout="@layout/include_expandable_linear" />

</LinearLayout>